<% if signed_in? %>
  <div class="row">
    <aside class="span4">
     <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to my first App</h1>

  <h2>
    Все честно сам делал, по примеру: Ruby on Rails Tutorial    
  </h2>
<h3>Зарегистрируйся, пожалуйста ;) </h3>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("ni.png", alt: "#"), '#' %>
<% end %>